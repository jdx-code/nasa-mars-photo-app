<body>
    <h1 class="bg-yellow-600">MARS photo API</h1>
    <h2>Curiosity</h2>
    <% let cameras = ['FHAZ', 'RHAZ', 'MAST', 'CHEMCAM', 'MAHLI', 'MARDI', 'NAVCAM', 'PANCAM', 'MINITES'] %>
    <form action="/getMarsPhoto" method="GET">
        <!-- <label>Sol(Mars Solar Day)</label>
        <input type="number" name="sol" value="">
        <label>Camera</label>
        <select name="camera">
            <option value="">Any</option>
            <% cameras.forEach(camera => { %>
            <option value="<%= camera %>"><%= camera %></option>
            <% }) %>
        </select> -->
        
            
        <input type="number" name="sol" placeholder="Sol(Mars Solar Day)" value=""/>            
    
        <select name="camera">
            <option value="">Any</option>
            <% cameras.forEach(camera => { %>
                <option value="<%= camera %>"><%= camera %></option>
            <% }) %>
        </select>        
        
        <button type="submit">Find Photos</button>
    </form>
    
    <% if(typeof photos !== 'undefined') { %>
        <% photos.forEach(photo => { %>
            <img src="<%= photo.img_src %>" alt="Mars photo" style="width:300px; height: 250px;">
        <% }) %>
    <% } else if(typeof photos !== 'undefined' && photos.length == 0){ %>
        <p>No results</p>
    <% } %>

    <script type="text/javascript" src="js/main.js"></script>
</body>
</html>